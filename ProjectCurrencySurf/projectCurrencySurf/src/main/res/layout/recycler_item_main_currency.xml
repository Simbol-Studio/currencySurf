<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80_dp"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:padding="@dimen/_16_dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/currencyImg"
        android:layout_width="@dimen/_48_dp"
        android:layout_height="@dimen/_48_dp"
        android:fitsSystemWindows="false"
        android:scaleType="centerCrop"
        app:layout_collapseMode="parallax"
        app:roundedCornerRadius="@dimen/_24_dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16_dp"
        android:layout_toRightOf="@id/currencyImg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/currencyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/currencyNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>