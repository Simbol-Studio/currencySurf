<resources>

    <!-- Base application theme. -->
    <style name="DarkAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey_1</item>
        <item name="colorPrimaryDark">@color/dark_grey_2</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:textColor">@color/dark_grey_8</item>
        <item name="android:actionMenuTextColor">@color/dark_grey_8</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="DarkTitleText">
        <item name="android:fontFamily">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/_20_sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>